{
  "name": "template-apollo-v3",
  "version": "1.0.0",
  "description": "template Graphql apollo 3 + mongoose",
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "build": "npx tsc -p . && ncp src/schema build/schema",
    "dev": "nodemon \"src/app.ts\" --exec \"ts-node\" \"src/app.ts\" -e ts,graphql,json"
  },
  "keywords": [
    "graphql",
    "graphql-basic",
    "unions",
    "query",
    "mutation",
    "book-store-",
    "apollo-server-express-3"
  ],
  "author": "Ismael Osuna",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/load-files": "^6.4.0",
    "apollo-server-express": "^3.3.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.3",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import-node": "^0.0.4",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tools": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.4",
    "ncp": "^2.0.0",
    "subscriptions-transport-ws": "^0.11.0",
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.7.10",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1"
  }
}
